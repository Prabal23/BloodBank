<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backup"
    tools:context="com.blood.band.bloodband.BloodSearch">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2ffffff" />

    <ImageView
        android:id="@+id/backing"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/backing" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="রক্তদাতা অনুসন্ধান"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16dp"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ham" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/backing"
        android:layout_marginBottom="55dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="আপনার প্রয়োজনীয় রক্তের গ্রুপটি বাছাই করুন"
                android:textAlignment="center"
                android:textColor="#e83d3d"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/blood_grp"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/circular_shape"
                android:gravity="center"
                android:text="রক্তের গ্রুপ"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_below="@+id/blood_grp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:background="#e83d3d"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/loco"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="জেলা"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/select"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/blood_grp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="35dp"
                android:background="#ffffff"
                android:gravity="center|start"
                android:text="জেলা বাছাই করুন"
                android:textColor="#6b6868" />

            <ImageView
                android:id="@+id/down"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/blood_grp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/down1" />

            <ImageView
                android:id="@+id/up"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/blood_grp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="50dp"
                android:rotation="180"
                android:src="@drawable/down1"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/down"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#9e9b9b" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_below="@+id/select"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="#e83d3d"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/loco1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="উপজেলা"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/select1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/select"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:gravity="center|start"
                android:text="উপজেলা বাছাই করুন"
                android:textColor="#6b6868" />

            <ImageView
                android:id="@+id/down1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/select"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/down1" />

            <ImageView
                android:id="@+id/up1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/select"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:rotation="180"
                android:src="@drawable/down1"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/down1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#9e9b9b" />

            <Button
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/select1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="#e83d3d"
                android:text="অনুসন্ধান"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </RelativeLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:background="#9e9b9b" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</RelativeLayout>
