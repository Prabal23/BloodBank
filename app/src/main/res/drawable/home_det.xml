<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#fdfdfd" />
            <stroke
                android:width="1dp"
                android:color="#dfdddd" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#d90000" />
            <stroke
                android:width="0.2dp"
                android:color="#fdfdfd" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>